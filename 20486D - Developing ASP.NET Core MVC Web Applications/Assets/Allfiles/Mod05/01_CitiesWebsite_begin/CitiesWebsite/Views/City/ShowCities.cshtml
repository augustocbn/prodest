@{
    Layout = null;
}

<!DOCTYPE html>

<html>

    <head>
        <title>Show Cities</title>
        <link href="~/css/style.css" rel="stylesheet" />
    </head>
    <body>
        <h1>Select City</h1>
        @foreach (var item in ViewBag.Cities)
        {
           @await Component.InvokeAsync("City", item.Value.Name)
        }
    </body>

</html>